<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= typeof title != 'undefined' ? title : 'App' %> - Real EMS</title>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        setTimeout(function () {
          const alert = document.querySelector(".alert");
          if (alert) {
            alert.classList.remove("show");
            alert.addEventListener("transitionend", () => alert.remove());
          }
        }, 10000); // 10000 milliseconds = 10 seconds
      });
    </script>
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css" />
    <link
      rel="stylesheet"
      href="/bootstrap-icons-font/bootstrap-icons.min.css"
    />
    <link rel="stylesheet" href="/assets/css/style.css" />
  </head>

  <body>
    <%- include('../includes/admin/error-display') %>
    <div class="d-flex flex-column" style="height: 100dvh">
      <%- include('../includes/admin/header') %>
      <div class="d-flex flex-grow-1 mt-5 pt-2">
        <%- include('../includes/admin/aside') %>

        <main class="flex-grow-1 my-4"><%- body %></main>
      </div>
      <%- include('../includes/admin/footer') %>
    </div>
    <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/assets/js/script.js"></script>
  </body>
</html>
