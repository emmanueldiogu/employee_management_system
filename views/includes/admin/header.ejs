<header class="border-bottom position-fixed w-100 z-3 bg-white">
  <div class="container-fluid">
    <div class="d-flex align-items-center ">
      <h1 class="fw-bold fs-4">
        <span class="nav-link-logo"> R </span>
        <span class="nav-link-text">Real EMS </span>
      </h1>
      <div class="d-flex justify-content-between align-items-center flex-grow-1">
        <button class="btn" type="button" data-bs-toggle="sidebar-collapse">
          <i class="bi bi-list fw-bold fs-3"></i>
        </button>
        <p>Welcome back <%= user.name %>!</p>
        <div class="d-flex justify-content-end align-items-center me-3">
          <div class="dropdown">
            <button
              style="width: 50px; height: 50px"
              class="rounded-circle dropdown-toggle p-0 border-0"
              type="button"
              data-bs-toggle="dropdown"
              aria-expanded="false"
            >
              <img
                src="/assets/img/user.jpg"
                class="img-fluid rounded-circle"
                alt="Profile image"
              />
            </button>
            <ul class="dropdown-menu">
              <li>
                <a class="dropdown-item" href="/logout">
                  <i class="bi bi-box-arrow-left me-2"></i>
                  Logout
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
