<!DOCTYPE html>
<html lang="en">
  <%- include('../includes/admin/head') %>

  <body>
    <%- include('../includes/admin/error-display') %>
    <div class="d-flex flex-column" style="height: 100dvh" >
      <%- include('../includes/admin/header') %>
      <div class="d-flex flex-grow-1 mt-5 pt-2">
        <%- include('../includes/admin/aside') %>

        <main class="flex-grow-1 my-4">
          <div class="container">
            <div class="row">
              <div class="col-3">
                <div class="card border-0 shadow text-center">
                  <div class="card-body">
                    <div class="mb-4 fs-1 fw-bold">
                      <%= usersCount ? usersCount : 0 %>
                    </div>
                    <h3>Users</h3>
                  </div>
                </div>
              </div>
              <div class="col-3">
                <div class="card border-0 shadow text-center">
                  <div class="card-body">
                    <div class="mb-4 fs-1 fw-bold">
                      <%= employeesCount ? employeesCount : 0 %>
                    </div>
                    <h3>Employees</h3>
                  </div>
                </div>
              </div>
              <div class="col-3">
                <div class="card border-0 shadow text-center">
                  <div class="card-body">
                    <div class="mb-4 fs-1 fw-bold">
                      <%= departmentsCount ? departmentsCount : 0 %>
                    </div>
                    <h3>Departments</h3>
                  </div>
                </div>
              </div>
              <div class="col-3">
                <div class="card border-0 shadow text-center">
                  <div class="card-body">
                    <div class="mb-4 fs-1 fw-bold">0</div>
                    <h3>Count</h3>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </main>
      </div>
      <%- include('../includes/admin/footer') %>
    </div>
    <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/assets/js/script.js"></script>
  </body>
</html>
